          <ChoiceBox fx:id="featureTypeChoiceBox" GridPane.columnIndex="1" GridPane.rowIndex="1" />
          
          <Label text="3. Class Measure:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
          <ChoiceBox fx:id="classMeasureChoiceBox" GridPane.columnIndex="2" GridPane.rowIndex="1" />
          
        </children>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
